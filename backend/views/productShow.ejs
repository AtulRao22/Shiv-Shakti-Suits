  <!-- Ratings & Reviews Section -->
  <div class="container py-5">
    <h2 class="reviews-title">Customer reviews & rating</h2>
    
    <div class="rating-container">
      <!-- Left: Rating Bars -->
      <div class="rating-bars-section">
        <% for(let i = 5; i >= 1; i--) { 
          const count = ratingDistribution[i] || 0;
          const total = product.totalRatings || 1;
          const percentage = Math.round((count / total) * 100);
        %>
          <div class="rating-bar-row">
            <span class="star-num"><%= i %> <i class="fa-solid fa-star"></i></span>
            <div class="bar-bg">
              <div class="bar-fill" style="width: <%= percentage %>%"></div>
            </div>
            <span class="rating-count-num"><%= count %></span>
          </div>
        <% } %>
      </div>

      <!-- Center: Average Rating -->
      <div class="rating-center">
        <div class="avg-rating-box">
          <h1 class="rating-number"><%= product.averageRating ? product.averageRating.toFixed(1) : '0.0' %></h1>
          <div class="stars-large">
            <% 
              const avgRating = product.averageRating || 0;
              for(let i = 1; i <= 5; i++) { 
                if(i <= Math.floor(avgRating)) { %>
                  <i class="fa-solid fa-star"></i>
                <% } else if(i === Math.ceil(avgRating) && avgRating % 1 !== 0) { %>
                  <i class="fa-solid fa-star-half-stroke"></i>
                <% } else { %>
                  <i class="fa-regular fa-star"></i>
                <% } 
              } 
            %>
          </div>
          <p class="rating-text"><%= product.totalRatings || 0 %> Ratings</p>
        </div>
      </div>

      <!-- Right: Action Buttons -->
      <div class="rating-actions">
        <button class="btn-write-review" id="openReviewModal">Write A Review</button>
        <button class="btn-see-reviews" onclick="document.getElementById('reviewsList').scrollIntoView({behavior: 'smooth'})">See All Reviews</button>
      </div>
    </div>

    <!-- Reviews List -->
    <div id="reviewsList" class="reviews-section">
      <h3 class="reviews-heading">Most helpful positive review</h3>
      
      <% if(reviews && reviews.length > 0) { %>
        <% reviews.forEach(function(review, index){ %>
          <% 
            const currentUserId = user?._id?.toString();
            const reviewUserId = typeof review.user === 'string' ? review.user : review.user?._id?.toString();
            const canDelete = currentUserId && reviewUserId && currentUserId === reviewUserId;
          %>
          <div class="review-card" data-review-id="<%= review._id %>">
            <%# if(canDelete) { %>
            <!-- <button class="btn-delete-review" data-review-id="<%= review._id %>" title="Delete review">
               <i class="fa-solid fa-trash"></i>
             </button> -->
            <%# } %>    
            
            <div class="review-header">
              <div class="review-stars-small">
                <% for(let i = 1; i <= 5; i++) { %>
                  <i class="fa-solid fa-star <%= i <= review.rating ? 'star-filled' : 'star-empty' %>"></i>
                <% } %>
              </div>
              <div class="review-meta">
                <span class="review-author">
                  @<%= review.user && review.user.name 
                  ? review.user.name 
                  : (review.user && review.user.email 
                    ? review.user.email.split('@')[0] 
                    : 'customer') %>
                </span>
                <span class="review-date"><%= new Date(review.createdAt).toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' }) %></span>
              </div>
            </div>
            <% if(review.comment) { %>
              <p class="review-text"><%= review.comment %></p>
            <% } %>
          </div>
        <% }) %>
        
        <div class="reviews-footer">
          <p class="reviews-count"><%= reviews.length %> reviews</p>
        </div>
      <% } else { %>
        <div class="no-reviews-card">
          <i class="fa-regular fa-comments fa-3x"></i>
          <p>No reviews yet. Be the first to review this product!</p>
        </div>
      <% } %>
    </div>
  </div>
  </div>

 <!-- Recently Viewed -->
<% if (recentProducts && recentProducts.length > 0) { %>

    <div class="d-flex align-items-center justify-content-between mb-3">
      <h2 class="m-0">Recently Viewed</h2>
    </div>
    <div class="row g-3">
      <% recentProducts.forEach(function(rp){ %>
        <div class="col-6 col-md-6 col-lg-4 product-item">

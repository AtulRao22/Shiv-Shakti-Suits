  <div class="popup">
    <button id="popupClose" class="popup-close">&times;</button>
    <h5>Select Size</h5>
    <div id="popupSizes" class="popup-sizes">
      <% (product.variants || []).forEach(function(v){ %>
        <% if(v.stock > 0) { %>
          <button 
            class="chip popup" 
